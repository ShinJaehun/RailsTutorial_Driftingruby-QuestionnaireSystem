<h1>Responses</h1>

<table class='table'>
  <thead>
    <tr>
        <th>Questionnaire</th>
        <th>Question</th>
        <th>Response</th>
        <th colspan=3>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @responses.each do |response| %>
      <tr>
        <td><%= response.questionnaire.name %></td>
        <td><%= response.question.name %></td>
        <td><%= response.response_text %></td>
      
        <td><%= link_to "Show", response_path(response) %></td>
        <td><%= link_to "Edit", edit_response_path(response) %></td>
        <td>
          <%= link_to "Delete", response_path(response),
            "data-turbo-method": :delete,
            "data-turbo-confirm": "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Go to Surveys", questionnaires_path %>